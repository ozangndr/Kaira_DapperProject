@model IEnumerable<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Kategoriler</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Category/Delete/@item.CategoryId" class="btn btn-danger">Sil</a>
                    <a href="/Category/Update/@item.CategoryId" class="btn btn-info">Düzenle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

